<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Plans</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header class="header">
    <input type="checkbox" id="nav-toggle" class="nav-toggle" aria-hidden="true">
    <label for="nav-toggle" class="hamburger" aria-label="Open menu"><span></span></label>
    <a href="/panel/seller/logout" class="header-logout">Logout</a>
    <nav class="nav-menu">
      <a href="/panel/seller">Dashboard</a>
      <a href="/panel/seller/keys">Keys</a>
      <a href="/panel/seller/plans">Plans</a>
      <a href="/panel/seller/blocked">Blocked</a>
    </nav>
    <label for="nav-toggle" class="nav-backdrop" aria-label="Close menu"></label>
  </header>
  <div class="page">
    <h1>Plans</h1>
    <p><a href="/panel/seller" class="btn btn-secondary">Back</a> <a href="/panel/seller/plans/new" class="btn">New Plan</a></p>
    <% if (typeof created !== 'undefined' && created) { %>
    <div class="card success-msg">Plan created.</div>
    <% } %>
    <% if (typeof updated !== 'undefined' && updated) { %>
    <div class="card success-msg">Plan updated.</div>
    <% } %>
    <% if (typeof deleted !== 'undefined' && deleted) { %>
    <div class="card success-msg">Plan deleted.</div>
    <% } %>
    <div class="card">
      <ul class="list seller-list">
        <% (plans || []).forEach(function(p) { %>
        <li class="seller-row">
          <span><%= p.name %> — <%= p.days %> days — ₹<%= p.price %></span>
          <span class="row-actions">
            <a href="/panel/seller/plans/<%= p.id %>/edit" class="btn btn-small">Edit</a>
            <form method="post" action="/panel/seller/plans/<%= p.id %>/delete" style="display:inline;" onsubmit="return confirm('Delete this plan?');">
              <button type="submit" class="btn btn-small btn-danger">Delete</button>
            </form>
          </span>
        </li>
        <% }); %>
      </ul>
    </div>
  </div>
</body>
</html>
