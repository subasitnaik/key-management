<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
  <title>Credits - <%= seller.username %></title>
  <%- include('../partials/mobile-styles') %>
  <style>
    .form-row { display: flex; flex-wrap: wrap; gap: 0.75rem; }
    .form-row .form-group { flex: 1 1 120px; min-width: 0; }
    .form-row .form-group:last-child { flex: 0 0 auto; align-self: flex-end; }
  </style>
</head>
<body>
  <div class="container">
    <nav class="nav">
      <a href="/panel/admin">Dashboard</a>
      <a href="/panel/admin/sellers/new">New Seller</a>
      <a href="/panel/admin/settings">Change Password</a>
      <form action="/panel/admin/logout" method="post">
        <button type="submit" class="btn">Logout</button>
      </form>
    </nav>
    <h1>Credits: <%= seller.username %></h1>
    <div class="card">
      <div class="stats">
        <div class="stat"><span class="val"><%= seller.credits_balance %></span><br><span class="lbl">Balance</span></div>
      </div>
      <h2>Add/Deduct</h2>
      <% if (typeof err !== 'undefined' && err === 'amount') { %><p class="error">Enter valid amount</p><% } %>
      <form method="post" action="/panel/admin/sellers/<%= seller.id %>/credits">
        <div class="form-row">
          <div class="form-group">
            <label>Amount (+add / -deduct)</label>
            <input type="number" name="amount" placeholder="100 or -50" required>
          </div>
          <div class="form-group">
            <label>Reason</label>
            <input type="text" name="reason" placeholder="Manual adjustment">
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-block">Apply</button>
          </div>
        </div>
      </form>
    </div>
    <div class="card">
      <h2>Ledger</h2>
      <div class="table-wrap">
        <table>
          <tr><th>Date</th><th>Amount</th><th>Reason</th></tr>
          <% ledger.forEach(function(l) { %>
          <tr>
            <td><%= l.created_at %></td>
            <td><%= l.amount > 0 ? '+' : '' %><%= l.amount %></td>
            <td><%= l.reason || '-' %></td>
          </tr>
          <% }); %>
        </table>
      </div>
    </div>
  </div>
</body>
</html>
