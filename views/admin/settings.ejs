<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
  <title>Change Password - Master Admin</title>
  <%- include('../partials/mobile-styles') %>
</head>
<body>
  <div class="container">
    <nav class="nav">
      <a href="/panel/admin">Dashboard</a>
      <a href="/panel/admin/sellers/new">New Seller</a>
      <a href="/panel/admin/settings">Change Password</a>
      <form action="/panel/admin/logout" method="post">
        <button type="submit" class="btn">Logout</button>
      </form>
    </nav>
    <h1>Change Password</h1>
    <% if (typeof saved !== 'undefined' && saved) { %><p class="success">Password changed successfully.</p><% } %>
    <% if (typeof err !== 'undefined' && err === 'wrong') { %><p class="error">Current password is incorrect.</p><% } %>
    <% if (typeof err !== 'undefined' && err === 'short') { %><p class="error">New password must be at least 6 characters.</p><% } %>
    <% if (typeof err !== 'undefined' && err === 'mismatch') { %><p class="error">New passwords do not match.</p><% } %>
    <div class="card">
      <p class="label">Logged in as: <strong><%= admin.username %></strong></p>
      <form method="post" action="/panel/admin/settings">
        <div class="form-group">
          <label>Current Password</label>
          <input type="password" name="current_password" required autocomplete="current-password">
        </div>
        <div class="form-group">
          <label>New Password</label>
          <input type="password" name="new_password" required minlength="6" autocomplete="new-password">
        </div>
        <div class="form-group">
          <label>Confirm New Password</label>
          <input type="password" name="confirm_password" required minlength="6" autocomplete="new-password">
        </div>
        <button type="submit" class="btn btn-block">Change Password</button>
      </form>
    </div>
  </div>
</body>
</html>
