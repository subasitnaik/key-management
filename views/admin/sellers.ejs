<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Sellers</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header class="header">
    <input type="checkbox" id="nav-toggle" class="nav-toggle" aria-hidden="true">
    <label for="nav-toggle" class="hamburger" aria-label="Open menu"><span></span></label>
    <a href="/panel/admin/logout" class="header-logout">Logout</a>
    <nav class="nav-menu">
      <a href="/panel/admin">Dashboard</a>
      <a href="/panel/admin/sellers">Sellers</a>
      <a href="/panel/admin/settings">Settings</a>
    </nav>
    <label for="nav-toggle" class="nav-backdrop" aria-label="Close menu"></label>
  </header>
  <div class="page">
    <h1>Sellers</h1>
    <p><a href="/panel/admin/sellers/new" class="btn">New Seller</a></p>
    <% if (typeof created !== 'undefined' && created) { %>
    <div class="card success-msg">Seller created.</div>
    <% } %>
    <% if (typeof deleted !== 'undefined' && deleted) { %>
    <div class="card success-msg">Seller deleted (suspended).</div>
    <% } %>
    <div class="card">
      <ul class="list seller-list">
        <% (sellers || []).forEach(function(s) { %>
        <li class="seller-row">
          <span><a href="/panel/admin/sellers/<%= s.id %>"><%= s.username %></a> — slug: <span class="badge"><%= s.slug %></span> — credits: <strong><%= s.credits_balance ?? 0 %></strong></span>
          <span class="row-actions">
            <a href="/panel/admin/sellers/<%= s.id %>#credits" class="btn btn-small">Adjust credits</a>
            <a href="/panel/admin/sellers/<%= s.id %>" class="btn btn-small btn-secondary">Edit</a>
          </span>
        </li>
        <% }); %>
      </ul>
    </div>
  </div>
</body>
</html>
