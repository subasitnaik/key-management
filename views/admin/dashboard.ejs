<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Master Admin</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header class="header">
    <input type="checkbox" id="nav-toggle" class="nav-toggle" aria-hidden="true">
    <label for="nav-toggle" class="hamburger" aria-label="Open menu"><span></span></label>
    <a href="/panel/admin/logout" class="header-logout">Logout</a>
    <nav class="nav-menu">
      <a href="/panel/admin">Dashboard</a>
      <a href="/panel/admin/sellers">Sellers</a>
      <a href="/panel/admin/settings">Settings</a>
    </nav>
    <label for="nav-toggle" class="nav-backdrop" aria-label="Close menu"></label>
  </header>
  <div class="page">
    <h1>Master Admin</h1>
    <div class="card">
      <p class="text-dim">Welcome. Open the menu (top left) to manage sellers, credits, and settings.</p>
    </div>
    <div class="card">
      <h2>Sellers overview</h2>
      <% if (sellersWithStats && sellersWithStats.length) { %>
      <ul class="list seller-list dashboard-seller-list">
        <li class="seller-list-header">
          <span>Seller</span>
          <span>Active users</span>
          <span>Total earning</span>
          <span class="row-actions"></span>
        </li>
        <% (sellersWithStats || []).forEach(function(row) { var s = row.seller; %>
        <li class="seller-row">
          <span><a href="/panel/admin/sellers/<%= s.id %>"><%= s.username %></a> — <span class="badge"><%= s.slug %></span></span>
          <span><strong><%= row.activeUsers %></strong></span>
          <span>₹<%= (row.earnedAmount || 0).toFixed(2) %></span>
          <span class="row-actions">
            <a href="/panel/admin/sellers/<%= s.id %>" class="btn btn-small btn-secondary">Edit</a>
          </span>
        </li>
        <% }); %>
      </ul>
      <% } else { %>
      <p class="text-dim">No sellers yet. <a href="/panel/admin/sellers/new">Create one</a>.</p>
      <% } %>
    </div>
  </div>
</body>
</html>
